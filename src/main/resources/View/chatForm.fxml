<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ZenVeus.javafx.Controller.ChatFormController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-2.0" prefHeight="66.0" prefWidth="600.0" style="-fx-background-color: #3BC688;" text="Send Mail" textFill="WHITE">
         <font>
            <Font name="DejaVu Sans Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="subject" layoutX="336.0" layoutY="122.0" onAction="#subjectFieldOnAction" prefHeight="24.0" prefWidth="221.0" promptText="subject" style="-fx-background-color: transpanent; -fx-border-color: #3BC688; -fx-border-width: 0px 0px 1px 0px;" />
      <TextField fx:id="to" layoutX="40.0" layoutY="122.0" onAction="#toFieldOnAction" prefHeight="24.0" prefWidth="221.0" promptText="to" style="-fx-background-color: transpanent; -fx-border-color: #3BC688; -fx-border-width: 0px 0px 1px 0px;" />
      <TextArea fx:id="massage" layoutX="134.0" layoutY="188.0" prefHeight="137.0" prefWidth="337.0" promptText="massage" style="-fx-background-color: transpanent; -fx-border-color: #3BC688;" />
      <Button layoutX="242.0" layoutY="352.0" mnemonicParsing="false" onAction="#sendBtn" prefHeight="31.0" prefWidth="99.0" style="-fx-background-color: #3BC688; -fx-background-radius: 20px;" text="send" textFill="WHITE">
         <font>
            <Font name="FreeSerif Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
